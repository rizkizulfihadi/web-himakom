        <div class="band">
            <% beritaUtama.forEach(berita => { %>
                <div class="item-1">
                <a href="news/<%= berita.judul %>" class="card-article">
                    <div class="thumb" style="background-image: url(./uploads/images/<%= berita.thumbnail %>);"></div>
                    <article>
                    <h1><%= berita.judul %> </h1>
                    <span><i class="fas fa-calendar-alt mr-2"></i> <%= berita.tanggalDibuat %> </span>
                    </article>
                </a>
                </div>
            <% }) %>

            <% berita.forEach(berita => { %>
                <div class="item-2">
                <a href="news/<%= berita.judul %>" class="card-article">
